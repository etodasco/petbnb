<div class="container mt-5 text-center">
  <h1>Welcome to Petbnb</h1>
</div>

<div class="d-flex justify-content-center mt-5">
    <img src="https://media-cldnry.s-nbcnews.com/image/upload/t_nbcnews-fp-1024-512,f_auto,q_auto:best/rockcms/2022-08/220805-border-collie-play-mn-1100-82d2f1.jpg" class="img-fluid mb-5" alt="Border Collie">
</div>


<%# Img cards for all pets %>
<div class="container">
  <div class="row">
    <% @pets.each do |pet| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <img src="<%= pet.image_url %>" class="card-img-top" alt="<%= pet.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= pet.name %></h5>
            <p class="card-text"><%= pet.breed %></p>
            <p class="card-text"><%= pet.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
