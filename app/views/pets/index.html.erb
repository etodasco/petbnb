<div class="container mt-4">
  <div class="row">
    <% @pets.each do |pet| %>
      <div class="col-md-4 mb-4"> <!-- Adjust column size as needed -->
        <div class="card h-100"> <!-- Ensure cards are of equal height -->
          <img src="<%= pet.image_url || 'https://place.dog/300/200' %>" class="card-img-top" alt="<%= pet.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= pet.name %></h5>
            <p class="card-text">Breed: <%= pet.breed %></p>
            <p class="card-text">Description: <%= pet.description %></p>
            <p class="card-text"><small class="text-muted">Location: <%= pet.address %></small></p>
          </div>
          <div class="card-footer text-center">
            <a href="#" class="btn btn-primary">View Info</a> <!-- Button to view more details -->
          </div>
        </div>
      </div>
    <% end %>
  </div>
