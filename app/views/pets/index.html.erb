
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

  <%= link_to 'View All Reservations', reservations_path, class: 'btn btn-primary' %>


  <div class="input-group mt-3 mb-3">
    <input type="text" class="form-control" placeholder="Search available pets" aria-label="Recipient's username" aria-describedby="basic-addon2">
    <div class="input-group-append">
      <span class="input-group-text" id="basic-addon2">Search</span>
    </div>
  </div>

<h1 class="text-left mt-5">Available Pets ðŸ¦®</h1>

<%= link_to 'Post a New Pet', new_pet_path, class: 'btn btn-success mb-3' %>

<div class="container mt-4">
  <div class="row">
    <% @pets.each do |pet| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="<%= pet.image_url || 'https://place.dog/300/200' %>" class="card-img-top" alt="<%= pet.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= pet.name %></h5>
            <p class="card-text">Breed: <%= pet.breed %></p>
            <p class="card-text">Description: <%= pet.description %></p>
            <p class="card-text"><small class="text-muted">Location: <%= pet.address %></small></p>
          </div>
          <div class="card-footer text-center">
            <%= link_to "View #{pet.name}'s Details", pet_path(pet), class: "btn btn-primary" %>
            <%# <a href="#" class="btn btn-primary">View Details</a> %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
