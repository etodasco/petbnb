<div class="container mt-5 d-flex justify-content-center">
  <div class="text-center">
    <img src="<%= @pet.image_url || 'https://place.dog/300/200' %>" class="img-fluid mb-3" alt="<%= @pet.name %>">
    <ul class="list-unstyled">
      <h1><%= @pet.name %></h1>
      <li><%= @pet.description %></li>
      <li><%= @pet.breed %></li>
      <li><%= @pet.address %></li>
    </ul>
  </div>
</div>

<%= link_to "Reserve #{@pet.name}", new_pet_reservation_path(@pet), class: "btn btn-primary" %>
<%= link_to "All Pets", pets_path, class: "btn btn-primary" %>

<!-- Add the delete link here -->
<%= link_to "Delete #{@pet.name}", pet_path(@pet), method: :delete, data: { confirm: 'Are you sure you want to delete this pet?' }, class: "btn btn-danger" %>
