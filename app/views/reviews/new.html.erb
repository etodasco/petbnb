<h2>New Review</h2>

<%= form_with model: [@animal, @review], local: true do |form| %>
  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating, in: 1..5 %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Review' %>
  </div>
<% end %>
